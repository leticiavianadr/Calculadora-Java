public class Main {

    public static void main(String[] args){
        System.out.println("Exercicío da calculadora");
        Calculadora.soma(6, 3);
        Calculadora.subtracao(9, 1.6);
        Mensagem.obterMensagem(6);
        Quadrilatero.area(9,6);
        Quadrilatero.area(5);


    }
}
public class Calculadora {

    public static void soma(double numero1, double numero2) {

        double resultado = numero1 + numero2;

        System.out.println("A soma de " + numero1 + " + " + numero2 + " é igual a " + resultado);
    }

    public static void subtracao(double numero1, double numero2) {

        double resultado = numero1 - numero2;

        System.out.println("O resultado da subtração de " + numero1 + " - " + numero2 + " é igual a " + resultado);
    }

}
